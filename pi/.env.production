# Production Environment Configuration for Raspberry Pi
# Copy this file to .env on your Raspberry Pi

# Database Configuration
DATABASE_URL="file:./data/finance.db"

# Authentication (IMPORTANT: Change this!)
SESSION_SECRET="your-super-secret-session-key-change-this-in-production-raspberry-pi-$(openssl rand -hex 32)"

# Admin Configuration (IMPORTANT: Change these!)
ADMIN_USERNAME="admin"
ADMIN_PASSWORD="change-this-secure-password"

# Features
ALLOW_REGISTRATION="true"

# Production Settings
NODE_ENV="production"

# Domain Configuration
DOMAIN="your-domain.com"

# SSL/HTTPS (if using reverse proxy)
TRUST_PROXY="true"
